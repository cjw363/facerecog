<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD SQL Map Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<!--全局映射器启用缓存-->
		<setting name="cacheEnabled" value="true"/>
		<!--使用列别名替换别名,默认true-->
		<setting name="useColumnLabel" value="true"/>
		<!--使用jdbc的getGeneratekeys获取自增主键值-->
		<setting name="useGeneratedKeys" value="true"/>
		<!--配置默认的执行器,SIMPLE、REUSE、BATCH-->
		<setting name="defaultExecutorType" value="REUSE"/>
		<!--开启驼峰命名转换Table:create_time到bean:createTime-->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
		<!-- 输出sql查询信息，正式环境最好注释掉 -->
		<setting name="logImpl" value="STDOUT_LOGGING"/>
	</settings>

	<typeAliases>
		<typeAlias type="com.facerecog.pojo.ParamData" alias="pd"/>
	</typeAliases>

	<plugins>
		<!-- com.github.pagehelper为PageHelper类所在包名 -->
		<plugin interceptor="com.github.pagehelper.PageInterceptor">
			<!--为了支持startPage(Object params)方法，增加了该参数来配置参数映射，用于从对象中根据属性名取值-->
			<property name="param1" value="value1"/>
			<!--如果 pageSize=0 或者 RowBounds.limit = 0 就会查询出全部的结果-->
			<property name="pageSizeZero" value="true"/>
			<!--pageNum<=0 时会查询第一页， pageNum>pages（超过总数时），会查询最后一页-->
			<property name="reasonable" value="true"/>
		</plugin>
	</plugins>
</configuration>